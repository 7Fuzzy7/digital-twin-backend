{
  "id": null,
  "uid": "dtwin-backend",
  "title": "Digital Twin Backend \u2014 Observability",
  "schemaVersion": 38,
  "version": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "WS Connections",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "dt_ws_connections",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Seconds Since Last Event",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "expr": "time() - dt_last_event_timestamp_seconds",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green"
              },
              {
                "color": "red",
                "value": 30
              }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Event Rate by Type (1m)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate(dt_events_total[1m])) by (event)",
          "legendFormat": "{{event}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Top: t_ms vs Threshold",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      },
      "targets": [
        {
          "expr": "dt_last_top_ms",
          "legendFormat": "last_top_ms",
          "refId": "A"
        },
        {
          "expr": "dt_threshold_top_ms",
          "legendFormat": "threshold_top_ms",
          "refId": "B"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Base: t_ms vs Threshold",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "dt_last_base_ms",
          "legendFormat": "last_base_ms",
          "refId": "A"
        },
        {
          "expr": "dt_threshold_base_ms",
          "legendFormat": "threshold_base_ms",
          "refId": "B"
        }
      ]
    }
  ]
}